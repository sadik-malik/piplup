{
  "name": "@piplup/use-local-storage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "tags": ["scope:packages"],
  "// targets": "to see all targets run: nx show project @piplup/use-local-storage --web",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "project": "{projectRoot}/package.json",
        "entryFile": "{projectRoot}/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime", "@piplup/use-event-listener"],
        "format": ["esm", "cjs"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "generateExportsField": true,
        "assets": [
          {
            "glob": "{projectRoot}/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    }
  }
}
